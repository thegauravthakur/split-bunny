generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Group {
  id         String    @id @default(uuid())
  name       String
  main_image String
  member_ids String[]
  Expense    Expense[]
  created_at DateTime  @default(now())
}

model Expense {
  id          String    @id @default(uuid())
  name        String
  description String
  amount      Float
  media       String[]
  group_id    String
  group       Group     @relation(fields: [group_id], references: [id])
  type        SplitType @default(EQUAL)
  created_by  String
  payee       String
  created_at  DateTime  @default(now())
  splits      Split[]
}

enum SplitType {
  EQUAL
  PERCENTAGE
  AMOUNT
}

model Split {
  id         String   @id @default(uuid())
  expense_id String
  expense    Expense  @relation(fields: [expense_id], references: [id])
  amount     Float
  payee      String
  created_at DateTime @default(now())
}
