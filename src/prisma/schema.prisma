generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Group {
  id          String    @id @default(uuid())
  name        String
  main_image  String
  cover_image String
  member_ids  String[]
  Expense     Expense[]
  created_at  DateTime  @default(now())
}

model Expense {
  id          String   @id @default(uuid())
  name        String
  description String
  amount      Float
  media       String[]
  group_id    String
  group       Group    @relation(fields: [group_id], references: [id])
  created_by  String
  created_at  DateTime @default(now())
}
